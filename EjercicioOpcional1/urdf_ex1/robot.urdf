<?xml version="1.0"?>
<robot name="robot_ex1">


    <material name="blue">
        <color rgba="0 0 0.8 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>


<!-- BASE -->

    <link name="base_link">
        
        <inertial>
            <origin xyz="0 0 0.1"/>  <!-- Centro de masa -->
            <mass value="10.0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" 
                     iyy="1.0" iyz="0.0" 
                     izz="1.0"/>  <!-- Matriz de inercia del cuerpo rígido -->
        </inertial>        



        <visual>
            <origin xyz="0 0 0.1"/>
            <geometry>
                <box size="0.4 0.4 0.2"/>
            </geometry>
        </visual>



        <collision>
            <origin xyz="0 0 0.1"/>
            <geometry>
                <box size="0.4 0.4 0.2"/>
            </geometry>
        </collision>


    </link>

<!-- LINK1 -->

    <link name="body_link1">

        <inertial>
            <origin xyz="0 0 0.8"/>  <!-- Centro de masa -->
            <mass value="1.0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" 
                     iyy="1.0" iyz="0.0" 
                     izz="1.0"/>  <!-- Matriz de inercia del cuerpo rígido -->
        </inertial>  



        <visual>
            <origin rpy="0 0 0" xyz="0 0 0.5"/>
            <geometry>
                <box size="0.1 0.1 0.8"/>
            </geometry>
            <material name="blue"/>
        </visual>



        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.5"/>
            <geometry>
                <box size="0.1 0.1 0.8"/>
            </geometry>
        </collision>


    </link>


<!-- LINK2 -->

    <link name="body_link2">

        <inertial>
            <origin xyz="0 0 0.1"/>  <!-- Centro de masa -->
            <mass value="1.0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" 
                     iyy="1.0" iyz="0.0" 
                     izz="1.0"/>  <!-- Matriz de inercia del cuerpo rígido -->
        </inertial>  



        <visual>
            <origin rpy="0 0 0" xyz="0 0 0.10"/>
            <geometry>
                <box size="0.1 0.1 0.25"/>
            </geometry>
            <material name="red"/>
        </visual>



        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.10"/>
            <geometry>
                <box size="0.1 0.1 0.3"/>
            </geometry>
        </collision>


    </link>



<!-- JOINTS -->

    <joint name="base_to_link1" type="revolute">
        <parent link="base_link"/>
        <child link="body_link1"/>
        <dynamics damping="0.0" friction="0.0001"/>

        <origin xyz="0 0 0.1"/>
        <axis xyz="0 0 1"/> <!-- Eje de rotación -->

        <limit lower="-3.14" upper="3.14" effort="10.0" velocity="0.5"/>
    </joint>

    <joint name="link1_to_link2" type="revolute">
        <parent link="body_link1"/>
        <child link="body_link2"/>
        <dynamics damping="0.0" friction="0.0001"/>

        <origin xyz="0 0 0.9"/>
        <axis xyz="1 0 0"/> <!-- Eje de rotación -->

        <limit lower="-3.14" upper="3.14" effort="10.0" velocity="0.5"/>
    </joint>

</robot>
